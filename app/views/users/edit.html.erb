<h2 class="edit-title">プロフィール編集</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_for @user do |f| %>
<div class="edit-forms">
  <div class="edit-form">
    <label>name: </label>
    <%= f.text_field :name %>
  </div><br>
  <div class="edit-form">
    <label>intro: </label>
    <%= f.text_area :introduction %>
  </div><br>
  <div class="edit-form">
    <label>プロフィール写真: </label>
    <%= f.file_field :profile_image %>
  </div>
  <%= f.submit "保存" %>
<% end %>
</div>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<section class="form">
  <h2>新規投稿</h2>
  <%= form_for @post, class: 'form' do |f| %>
  <div class="chat-contents_type-message_box">
    <%= f.label "画像" %>
    <%= f.file_field :post_image %>
    <%= f.label "内容" %>
    <%= f.text_area :body %>
  </div>
    <%= f.submit "送信", class: 'chat-contents_type-message_button'%>
  <% end %>
</section>

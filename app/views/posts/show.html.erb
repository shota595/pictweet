<div class="show-page">
  <div class="show-container">
    <div class="show-profile user-pic">
      <%= attachment_image_tag @post.user, :profile_image, format: "jpeg", fallback: 'no_image.jpg', size: '80x80' %>
      <%= @post.user.name %>
    </div><br>
    <div class="post-pic">
      <%= attachment_image_tag @post, :post_image, format: 'jpeg' %>
    </div>
  </div>
  <div class="user-comment">
    <%= form_for [@post,@post_comment], remote: true do |f| %>
      <%= f.text_area :comment, rows:'5', class: 'comment', placeholder: "コメント" %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
  <div class="comments-list">
    <div id="comment">
    <% @post_comments.each do |comment| %>
      <%= render 'posts/comment', post: @post, comment: comment %>
    <% end %>
    </div>
  </div>
</div>




